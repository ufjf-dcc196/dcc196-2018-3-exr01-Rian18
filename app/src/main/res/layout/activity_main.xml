<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/btn_ALuno"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Aluno"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="146dp" />

    <Button
        android:id="@+id/btn_Externo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Externo"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="146dp" />

    <Button
        android:id="@+id/btn_Servidor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Servidor"
        tools:layout_editor_absoluteX="279dp"
        tools:layout_editor_absoluteY="146dp" />

    <TextView
        android:id="@+id/txt_Titulo"
        android:layout_width="393dp"
        android:layout_height="90dp"
        android:text="Escolha uma das opções e preencha os dados : "
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toTopOf="@+id/btn_ALuno"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="7dp" />

    <TextView
        android:id="@+id/txt_contador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="280dp" />

</android.support.constraint.ConstraintLayout>